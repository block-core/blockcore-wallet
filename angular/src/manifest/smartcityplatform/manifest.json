{
    "name": "Smart City Platform",
    "version": "0.0.15",
    "manifest_version": 3,
    "description": "Manage your citizenship, identity, properties, social network and more.",
    "author": "City Chain Foundation",
    "icons": {
        "16": "assets/icon-16x16.png",
        "32": "assets/icon-32x32.png",
        "48": "assets/icon-48x48.png",
        "128": "assets/icon-128x128.png"
    },
    "permissions": [
        "activeTab",
        "declarativeNetRequest",
        "tabs",
        "storage",
        "unlimitedStorage",
        "webRequest",
        "webNavigation",
        "alarms",
        "clipboardWrite",
        "notifications"
    ],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Alt+Shift+X",
                "mac": "Alt+Shift+X",
                "chromeos": "Alt+Shift+X",
                "linux": "Alt+Shift+X"
            }
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html?#/popup",
        "default_title": "Smart City Platform"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "externally_connectable": {
        "matches": [
            "https://www.blockcore.net/*",
            "https://www.city-chain.org/*",
            "http://localhost/*"
        ]
    },
    "web_accessible_resources": [
        {
            "resources": [
                "provider.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "request_rules",
                "enabled": true,
                "path": "net_request_rules.json"
            }
        ]
    }
}